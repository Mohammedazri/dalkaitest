<!--c:LC79_OppWrapperItem-->
<!--** 
* @author Alain Ghoussoub
* @date 7/10/2020 
* @description Composant appeler dans LC78_RattacherOpportunitte qui représente chaque élément de la liste des opportunites filtés
*-->
<aura:component >
	<aura:attribute name="name" type="String" />
    <aura:attribute name="numero" type="String" />
    <div class="myDiv slds-grid slds-wrap slds-gutters">
        <div Style = 'margin-right: -10px;' class="slds-col slds-small-size_3-of-12 slds-medium-size_1-of-12 slds-large-size_1-of-12" >
            <lightning:icon iconName="standard:opportunity" alternativeText="{!v.name}" size = "medium" />
        </div>
        <div class="slds-col slds-small-size_9-of-12 slds-medium-size_11-of-12 slds-large-size_11-of-12" style= "padding-left: 20px">
            <p>{!v.name}</p>
            <p>{!v.numero}</p>
        </div>
    </div>  
</aura:component>