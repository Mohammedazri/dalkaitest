<!--c:LC82_RecapitulatifRegion-->
<!--** 
* @author Jacques Akiki
* @date 28/10/2020 
* @description Composant qui affiche le recapitulatifs par région des contrats reliés au partenaire
*-->
<aura:component Controller="LC82_RecapitulatifRegion_Cont" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global">
    <aura:attribute name="recordId" type="Id" />
    <aura:attribute name="ListRegion" type="list"/> 
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <div class="last-row-bold">
        <table class="slds-table slds-table_cell-buffer slds-table_bordered slds-table_striped slds-table--fixed-layout" id="tab1">
            <thead>
                <tr >
                    <th scope="col">
                        <div  title="Reg" class="thStyle">{!$Label.c.LC82_Region}</div>
                    </th>
                    <th scope="col">
                        <div  title="NomCont" class="thStyle">{!$Label.c.LC82_NombreCont}</div>
                    </th>
                    <th scope="col">
                        <div  title="Part" class="thStyle">{!$Label.c.LC82_TotalCAP1234}</div>
                    </th>
                </tr>
            </thead>
            <tbody>
                <aura:iteration items="{!v.ListRegion}" var="a">
                    <aura:if isTrue="{!a.StyleBold}">
                        <tr >
                            
                            <th  scope="row" class="slds-cell-wrap"> <div class="slds-line-clamp thStyle">
                                <b>{!a.RegionName}</b>
                                </div>
                            </th>
                            <th  scope="row" class="slds-cell-wrap"> <div class="slds-line-clamp thStyle">
                                <b>{!a.NumbContrat}</b>
                                </div>
                            </th>
                            <th  scope="row" class="slds-cell-wrap"> <div class="slds-line-clamp thStyle">
                                <b>{!a.TotalP1P2P3P4} €</b>
                                </div>
                            </th>
                        </tr>
                        <aura:set attribute="else">
                            <tr >
                                <th  scope="row" class="slds-cell-wrap"> <div class="slds-line-clamp">
                                    {!a.RegionName}
                                    </div>
                                </th>
                                <th  scope="row" class="slds-cell-wrap"> <div class="slds-line-clamp">
                                    {!a.NumbContrat}
                                    </div>
                                </th>
                                <th  scope="row" class="slds-cell-wrap"> <div class="slds-line-clamp">
                                    {!a.TotalP1P2P3P4} €
                                    </div>
                                </th>
                            </tr>
                        </aura:set>
                    </aura:if>
                </aura:iteration> 
            </tbody>
        </table>
    </div>
</aura:component>